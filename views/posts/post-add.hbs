<section class="py-5">
  <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
  <div class="container">
    <h1 style="margin: 2%; text-align: center;">Create Post</h1>
      <div>

        <form method="POST" action="/article/create/create-category">
          <div>
            <label for="Category">Category</label>
            <input type="text" name="newCategory" class="form-control" id="category" placeholder="New Category" value="New Category">
          </div>
          <button>Add Category</button>
        </form>      
      </div>
    <form method="POST" action="/article/create">
      <select multiple name="addCategory">
        <option value="" disabled selected>Select your option</option>
        {{#if categories}}
        {{#each categories}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
        {{else}}
        <option value="noCategories">-- No Categories --</option>
        {{/if}}
      </select>
      <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="title" value="Title">
      </div>
      <div class="form-group">
        <label for="Header Image">Header Image</label>
        <input type="text" name="postImg" class="form-control" id="image" placeholder="image" value="image">
      </div>
      <div class="form-group">
        <label for="Header Image">Text Snippet</label>
        <input type="text" name="textSnippet" class="form-control" id="image" placeholder="image" value="image">
      </div>
      <div class="form-group">
        <textarea name="post"></textarea>
      </div>
      <div class="form-group">
        <label for="metadescription">Meta</label>
        <input type="text" name="noindexNofollow" class="form-control" id="metadescription" placeholder="metadescription" value="robots - noindex, nofollow">
        <input type="text" name="indexFollow" class="form-control" id="metadescription" placeholder="metadescription" value="robots - index, follow">
        <input type="text" name="noindexFollow" class="form-control" id="metadescription" placeholder="metadescription" value="robots - noindex, follow">
        <input type="text" name="noindexNofollow" class="form-control" id="metadescription" placeholder="metadescription" value="robots - index, nofollow">
        <input type="text" name="metaDescription" class="form-control" id="metadescription" placeholder="metadescription" value="meta description">
      </div>
      <div>
        <button>Post</button>
      </div>
      <script>
        CKEDITOR.replace( 'post' );
      </script>
    </form>
  </div>
</section>
