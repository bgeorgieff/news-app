{{{meta}}}
<section class="single">
	<div class="container">
		<div class="row">
			<div class="col-md-4 sidebar" id="sidebar">
				{{> asidePostView}}
			</div>
			<div class="col-md-8">
				<article class="article main-article">
					<header>
						<h1>{{articleTitle}}</h1>
						<ul class="details">
							<li>{{date}}</li>
							<li>By <a href="#">{{postAuthor.username}}</a></li>
						</ul>
					</header>
					{{#if isLoggedIn}}
					{{#if isAdmin}}
					<div class="container">
						<a class="btn btn-primary more" href="/article/edit-post/{{id}}">
							<div>Edit</div>
							<div><i class="ion-ios-arrow-thin-right"></i></div>
						</a>
						<a class="btn btn-primary more" href="/article//delete/{{id}}">
							<div>Delete</div>
							<div><i class="ion-ios-arrow-thin-right"></i></div>
						</a>
					</div>
					{{/if}}
					{{/if}}
					<div class="main">
						{{{postImg}}}
						{{{post}}}
					</div>
					<footer>
						<div class="col">
							<ul class="tags">
								{{#each tags}}
								<li><a href="#">{{this.name}}</a></li>
								{{/each}}
							</ul>
						</div>
					</footer>
				</article>
				<div class="sharing"> 
					<ul class="social">
						<li class="count">
							{{views}}
							<div>Views</div>
						</li>
					</ul>
				</div>
				<div class="line thin"></div>
				<div class="comments">
				{{> comments }}
					<form class="row" action="/post/comment-add/{{id}}" method="POST">
						<div class="col-md-12">
							<h3 class="title">Leave Your Response</h3>
						</div>
						<div class="form-group col-md-12">
							<label for="message">Response <span class="required"></span></label>
							<textarea class="form-control" name="message" placeholder="Write your response ..."></textarea>
						</div>
						<div class="form-group col-md-12">
							<button class="btn btn-primary">Send Response</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

