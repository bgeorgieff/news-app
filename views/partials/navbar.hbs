<header class="primary">
	<div class="firstbar">
		<div class="container">
			<div class="row">
				<div class="col-md-3 col-sm-12">
					<div class="brand">
						<a href="/home">
							<h4>FilmG8</h4>
						</a>
					</div>						
				</div>
				<div class="col-md-6 col-sm-12">
					<form class="search" autocomplete="off" method="GET" action="/article/result/view">
						<div class="form-group">
							<div class="input-group">
								<input type="text" name="searchText" class="form-control" placeholder="Type something here">									
								<div class="input-group-btn">
									<button class="btn btn-primary"><i class="ion-search"></i></button>
								</div>
							</div>
						</div>
					</form>								
				</div>
				<div class="col-md-3 col-sm-12 text-right">
					<ul class="nav-icons">
						{{#if isLoggedIn}}
						<li><a href="/user/logout"><i class="ion-person"></i><div>Logout</div></a></li>
						{{else}}
						<li><a href="/user/register"><i class="ion-person-add"></i><div>Register</div></a></li>
						<li><a href="/user/login"><i class="ion-person"></i><div>Login</div></a></li>
						{{/if}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- Start nav -->
	<nav class="menu">
		<div class="container">
			<div class="mobile-toggle">
				<a href="#" data-toggle="menu" data-target="#menu-list"><i class="ion-navicon-round"></i></a>
			</div>
			<div class="mobile-toggle">
				<a href="#" data-toggle="sidebar" data-target="#sidebar"><i class="ion-ios-arrow-left"></i></a>
			</div>
			<div id="menu-list">
				<ul class="nav-list">
					<li class="for-tablet nav-title"><a>Menu</a></li>
					<li class="for-tablet"><a href="/user/login">Login</a></li>
					<li class="for-tablet"><a href="/user/register">Register</a></li>
					{{#each categories}}
					<li><a href="/category/view/{{_id}}">{{postCategory}}</a></li>
					{{/each}}
					{{#if isLoggedIn}}
					{{#if isAdmin}}
					<li><a class="myBtn" href="#"> Create Category</a></li>
					<li><a href="/article/create"> Create Post</a></li>
					{{/if}}
					{{/if}}
				</ul>
			</div>
		</div>
	</nav>
	<!-- End nav -->
</header>
<div class="modal-container">
	<div class="comments modal-content" id="modal-content">
		<form class="row" action="/category/create" method="POST">
			<div class="col-md-12">
				<h3 class="title">Please write a category name</h3>
			</div>
			<div class="form-group col-md-12">
				<textarea class="text-holder-create-category" name="message" placeholder="Category name..."></textarea>
			</div>
			<div class="form-group col-md-12">
				<button id="close">Save Category</button>
			</div>
		</form>
	</div>
</div>
