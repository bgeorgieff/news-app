{{#if comments}}
<h2 class="title">Write a Response</h2>
<div class="comment-list">
  <div class="item">
  {{#each comments}}
    <div class="user">                                
      <figure>
        <img src="images/img01.jpg">
      </figure>
      <div class="details">  
        <h5 class="name">{{author.username}}</h5>    
        <div class="description">
          {{comment}}
        </div>
      </div>
    </div>
        <div class="comment-reply">
      <form class="row" action="/post/reply/{{_id}}" method="POST">
        <div class="col-md-12">
          <h3 class="reply-to">Reply to {{author.username}}</h3>
        </div>
        <div class="form-group col-md-12">
          <textarea class="text-holder-comments" name="message" placeholder="Write your response ..."></textarea>
        </div>
        <div class="form-group col-md-12">
          <button class="btn btn-primary" >Reply</button>
        </div>
      </form>
      </div>
    {{#each reply}}
